unit UTabelas;

interface

uses
  UConexao,
  FireDAC.Comp.Client;

type
  TTabela = class
  private
    FQuery: TFDQuery;
    FConn : TConexao;
  published
    property Query: TFDQuery read FQuery write FQuery;
  public
    constructor Create();
    destructor Destroy; override;
  end;

implementation

{ TTabela }

constructor TTabela.Create;
begin
   FConn:= TConexao.Create;
end;

destructor TTabela.Destroy;
begin

  inherited;
end;

end.
